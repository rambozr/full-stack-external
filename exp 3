<body>
  <h1 id="count">0</h1>
  <div class="buttons">
    <button id="decrement">- Decrement</button>
    <button id="reset">Reset</button>
    <button id="increment">+ Increment</button>
  </div>

  <script src="script.js"></script>
</body>
